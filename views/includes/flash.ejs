<% if(success.length){ %>
<div>
  <div
    class="toast align-items-center text-bg-success border-0 position-fixed top-4 end-0 m-3"
    role="alert"
    aria-live="assertive"
    aria-atomic="true"
    data-bs-delay="5000"
    data-bs-autohide="true"
    style="z-index: 9999"
  >
    <div class="d-flex rounded" style="background-color: #04d12315 !important">
      <div class="toast-body"><%= success %></div>
      <button
        type="button"
        class="btn-close btn-close-white me-2 m-auto"
        data-bs-dismiss="toast"
        aria-label="Close"
      ></button>
    </div>
  </div>
</div>

<% } %> <% if(error.length){ %>
<div>
  <div
    class="toast align-items-center text-bg-success border-0 position-fixed top-16 end-0 m-3"
    role="alert"
    aria-live="assertive"
    aria-atomic="true"
    data-bs-delay="5000"
    data-bs-autohide="true"
  >
    <div class="d-flex rounded" style="background-color: #fc0202a3">
      <div class="toast-body"><%= error %></div>
      <button
        type="button"
        class="btn-close btn-close-white me-2 m-auto"
        data-bs-dismiss="toast"
        aria-label="Close"
      ></button>
    </div>
  </div>
</div>

<% } %>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const toastElements = document.querySelectorAll(".toast");
    toastElements.forEach((toastEl) => {
      const toast = new bootstrap.Toast(toastEl);
      toast.show();
    });
  });
</script>
