<% if(success.length){ %>
<div
  class="alert alert-success alert-dismissible fade show col-10 col-sm-6 offset-1 offset-sm-3 mt-1"
  role="alert"
>
  <%= success %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %> <% if(error.length){ %>
<div
  class="alert alert-danger alert-dismissible fade show col-10 col-sm-6 offset-1 offset-sm-3 mt-1"
  role="alert"
>
  <%= error %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
