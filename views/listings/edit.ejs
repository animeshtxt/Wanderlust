<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
        <h3>Edit this listing : </h3>
        <form action="/listings/<%= listing._id %>?_method=PUT" method="POST">
            <div class="mb-3">
                <label for="title" class="form-label">Title : </label>
                <input id="title" class="form-control" type="text" name="listing[title]" value="<%= listing.title %>">
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description : </label>
                <textarea id="description"  class="form-control" name="listing[description]" ><%= listing.description %></textarea>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image : </label>
                <input id="image" class="form-control"  type="text" name="listing[image.url]" value="<%= listing.image.url %>">
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price:</label>
                    <input type="number" name="listing[price]" id="price" class="form-control" value="<%= listing.price %>">
                </div>
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country:</label>
                    <input type="text" name="listing[country]" placeholder="Enter country" id="country" class="form-control" value="<%= listing.country %>">
                </div>
                
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location : </label>
                <input id="location"  class="form-control" type="text" name="listing[location]" value="<%= listing.location %>" >
            </div>
            <button class="btn btn-dark add-btn">Save</button>
            <br><br>
        </form>
    </div>
</div>
