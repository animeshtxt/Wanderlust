<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
        <br><br>
        <h3>Create a new listing:</h3>
        <form action="" method="POST">
            <div class="mb-3">
                <label for="title" class="form-label">Add a catchy title :</label>
                <input type="text" name="listing[title]" placeholder="Enter title" id="title" class="form-control">
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description:&nbsp;</label>
                <textarea name="listing[description]" placeholder="Enter description" id="description" class="form-control"></textarea>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image:</label>
                <input type="text" name="listing[image]" placeholder="Enter image URL/Link" id="image" class="form-control">
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price:</label>
                    <input type="number" placeholder="price" name="listing[price]" id="price" class="form-control">
                </div>
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country:</label>
                    <input type="text" name="listing[country]" placeholder="Enter country" id="country" class="form-control">
                </div>
                
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location:</label>
                <input type="text" name="listing[location]" placeholder="Enter location" id="location" class="form-control">
            </div>
            <button class="btn btn-dark add-btn">Add</button>
            <br><br>
        </form>
    </div>
</div>
